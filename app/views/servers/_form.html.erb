<%= semantic_form_for(@server) do |f| %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :hostname %>
    <%= f.input :ssh_user %>
    <%= f.input :block_device %>
    <%= f.input :mount_point %>
    <%= f.input :state, :as => :select, :collection => ['active', 'inactive'], :include_blank => false %>
    <% [:minute, :hourly, :daily, :weekly, :monthly, :quarterly, :yearly].each do |method|%>
      <%= f.input method %>
    <% end %>
  <% end %>
  <%= f.buttons %>
<% end %>
