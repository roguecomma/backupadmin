<p>
  <b>Name:</b>
  <%= @server.name %>
</p>
<p>
  <b>Hostname:</b>
  <%= @server.hostname %>
</p>
<p>
  <b>System Backup Id:</b>
  <%= @server.system_backup_id %>
</p>
<p>
  <b>Ssh User:</b>
  <%= @server.ssh_user %>
</p>
<p>
  <b>Block Device:</b>
  <%= @server.block_device %>
</p>
<p>
  <b>Mount Point:</b>
  <%= @server.mount_point %>
</p>
<p>
  <b>Snapshot Type:</b>
  <%= @server.snapshot_type %>
</p>
<% if @server.snapshot_type == 'MysqlSnapshot' then %>
  <p>
    <b>MySql User:</b>
    <%= @server.mysql_user %>
  </p>
  <p>
    <b>MySql Password:</b>
    <%= @server.mysql_password %>
  </p>
<% end %>
<p>
  <b>State:</b>
  <%= @server.state %>
</p>

<p>
  <b>Minute:</b>
  <%= @server.minute %>
</p>

<p>
  <b>Hourly:</b>
  <%= @server.hourly %>
</p>

<p>
  <b>Daily:</b>
  <%= @server.daily %>
</p>

<p>
  <b>Weekly:</b>
  <%= @server.weekly %>
</p>

<p>
  <b>Monthly:</b>
  <%= @server.monthly %>
</p>

<p>
  <b>Quarterly:</b>
  <%= @server.quarterly %>
</p>

<p>
  <b>Yearly:</b>
  <%= @server.yearly %>
</p>


