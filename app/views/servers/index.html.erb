<% @servers.each do |server| %>
  <tr>
    <td><%= link_to server.name, server %></td>
    <td><%= link_to server.hostname, server %></td>
    <td><%= server.ssh_user %></td>
    <td><%= server.block_device %></td>
    <td><%= server.mount_point %></td>
    <td><%= server.state %></td>
    <td><%= link_to 'Edit', edit_server_path(server) %></td>
    <td><%= link_to 'Snapshots', :controller => 'snapshots', :action => 'index', :server_id => server.id %></td>
    <td><%= link_to 'Events', :controller => 'snapshot_events', :action => 'index', :server_id => server.id %></td>
  </tr>
<% end %>
</table>

